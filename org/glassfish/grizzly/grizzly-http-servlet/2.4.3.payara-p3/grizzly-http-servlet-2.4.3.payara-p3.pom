                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <version>0.8.0</version>
                <executions>
                    <execution>
                        <id>servlet 3.0</id>
                        <configuration>
                            <schemaIncludes>
                                <includeSchema>**/web-app_3_0.xsd</includeSchema>
                            </schemaIncludes>
